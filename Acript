local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = game.Players.LocalPlayer
local camera = workspace.CurrentCamera

local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "Delta_Cyber_Final"
screenGui.ResetOnSpawn = false
screenGui.DisplayOrder = 9999

-- THEMES
local MainColor = Color3.fromRGB(12, 12, 12)
local AccentColor = Color3.fromRGB(0, 150, 255)
local GlowColor = Color3.fromRGB(0, 255, 255)

-- 1. AUTH SYSTEM
local keyFrame = Instance.new("Frame", screenGui)
keyFrame.Size = UDim2.new(0, 280, 0, 180)
keyFrame.Position = UDim2.new(0.5, -140, 0.5, -90)
keyFrame.BackgroundColor3 = MainColor
Instance.new("UICorner", keyFrame).CornerRadius = UDim.new(0, 12)
local ks = Instance.new("UIStroke", keyFrame); ks.Color = GlowColor; ks.Thickness = 2

local keyTitle = Instance.new("TextLabel", keyFrame)
keyTitle.Size = UDim2.new(1, 0, 0, 50); keyTitle.Text = "DELTA AUTH"; keyTitle.TextColor3 = AccentColor; keyTitle.Font = Enum.Font.GothamBold; keyTitle.TextSize = 20; keyTitle.BackgroundTransparency = 1

local keyInput = Instance.new("TextBox", keyFrame)
keyInput.Size = UDim2.new(0, 220, 0, 40); keyInput.Position = UDim2.new(0.5, -110, 0, 60); keyInput.PlaceholderText = "Enter Key..."; keyInput.BackgroundColor3 = Color3.fromRGB(25, 25, 25); keyInput.TextColor3 = Color3.new(1,1,1); Instance.new("UICorner", keyInput)

local submitBtn = Instance.new("TextButton", keyFrame)
submitBtn.Size = UDim2.new(0, 220, 0, 40); submitBtn.Position = UDim2.new(0.5, -110, 0, 115); submitBtn.Text = "ACTIVATE"; submitBtn.BackgroundColor3 = AccentColor; submitBtn.TextColor3 = Color3.new(1,1,1); submitBtn.Font = Enum.Font.GothamBold; Instance.new("UICorner", submitBtn)

-- 2. MAIN HUB LOADER
local function LoadHub()
    local mainFrame = Instance.new("Frame", screenGui)
    mainFrame.Size = UDim2.new(0, 260, 0, 380) -- Smaller Mini Size
    mainFrame.Position = UDim2.new(0.5, -130, 0.5, -190)
    mainFrame.BackgroundColor3 = MainColor
    mainFrame.Visible = true
    Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 12)
    local ms = Instance.new("UIStroke", mainFrame); ms.Color = GlowColor; ms.Thickness = 1.5

    -- DRAGGING LOGIC
    local titleBar = Instance.new("TextButton", mainFrame)
    titleBar.Size = UDim2.new(1, 0, 0, 45); titleBar.Text = "DELTA MINI"; titleBar.TextColor3 = AccentColor; titleBar.Font = Enum.Font.GothamBold; titleBar.BackgroundColor3 = Color3.fromRGB(20, 20, 20); Instance.new("UICorner", titleBar)
    
    local dragging, dragStart, startPos
    titleBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true; dragStart = input.Position; startPos = mainFrame.Position
        end
    end)
    UIS.InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            local delta = input.Position - dragStart
            mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    UIS.InputEnded:Connect(function() dragging = false end)

    local scroll = Instance.new("ScrollingFrame", mainFrame)
    scroll.Size = UDim2.new(1, -20, 1, -60); scroll.Position = UDim2.new(0, 10, 0, 55); scroll.BackgroundTransparency = 1; scroll.CanvasSize = UDim2.new(0,0,1.5,0); scroll.ScrollBarThickness = 0
    Instance.new("UIListLayout", scroll).Padding = UDim.new(0, 8)

    local function createModBtn(text)
        local b = Instance.new("TextButton", scroll)
        b.Size = UDim2.new(1, 0, 0, 45); b.BackgroundColor3 = Color3.fromRGB(25, 25, 25); b.TextColor3 = Color3.new(1,1,1); b.Font = Enum.Font.GothamBold; b.Text = text; Instance.new("UICorner", b)
        return b
    end

    -- SPEED
    local speedBox = Instance.new("TextBox", scroll)
    speedBox.Size = UDim2.new(1, 0, 0, 45); speedBox.PlaceholderText = "Walkspeed..."; speedBox.BackgroundColor3 = Color3.fromRGB(25, 25, 25); speedBox.TextColor3 = Color3.new(1,1,1); Instance.new("UICorner", speedBox)
    speedBox.FocusLost:Connect(function() if player.Character then player.Character.Humanoid.WalkSpeed = tonumber(speedBox.Text) or 16 end end)

    -- ADVANCED FLIGHT
    local flying = false
    local flyBtn = createModBtn("FLIGHT: OFF")
    flyBtn.MouseButton1Click:Connect(function()
        flying = not flying
        flyBtn.Text = flying and "FLIGHT: ON" or "FLIGHT: OFF"
        flyBtn.TextColor3 = flying and GlowColor or Color3.new(1,1,1)
        local char = player.Character
        local root = char:FindFirstChild("HumanoidRootPart")
        local hum = char:FindFirstChild("Humanoid")
        if flying and root and hum then
            local bv = Instance.new("BodyVelocity", root)
            local bg = Instance.new("BodyGyro", root)
            bv.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
            bg.MaxTorque = Vector3.new(math.huge, math.huge, math.huge)
            task.spawn(function()
                while flying do
                    RunService.RenderStepped:Wait()
                    bg.CFrame = camera.CFrame
                    bv.Velocity = (hum.MoveDirection.Magnitude > 0) and (hum.MoveDirection * 100) or Vector3.new(0,0.1,0)
                end
                bv:Destroy(); bg:Destroy()
            end)
        end
    end)

    -- NOCLIP
    local noclip = false
    local noclipBtn = createModBtn("NOCLIP: OFF")
    noclipBtn.MouseButton1Click:Connect(function()
        noclip = not noclip
        noclipBtn.Text = noclip and "NOCLIP: ON" or "NOCLIP: OFF"
        noclipBtn.TextColor3 = noclip and GlowColor or Color3.new(1,1,1)
    end)
    RunService.Stepped:Connect(function()
        if noclip and player.Character then
            for _, v in pairs(player.Character:GetDescendants()) do if v:IsA("BasePart") then v.CanCollide = false end end
        end
    end)

    -- AIMBOT
    local aimActive = false
    local aimBtn = createModBtn("AIMBOT: OFF")
    aimBtn.MouseButton1Click:Connect(function()
        aimActive = not aimActive
        aimBtn.Text = aimActive and "AIMBOT: ON" or "AIMBOT: OFF"
    end)
    RunService.RenderStepped:Connect(function()
        if aimActive then
            local target = nil; local dist = 400
            for _, v in pairs(game.Players:GetPlayers()) do
                if v ~= player and v.Character and v.Character:FindFirstChild("Head") then
                    local pos, os = camera:WorldToViewportPoint(v.Character.Head.Position)
                    if os then
                        local mag = (Vector2.new(pos.X, pos.Y) - Vector2.new(camera.ViewportSize.X/2, camera.ViewportSize.Y/2)).Magnitude
                        if mag < dist then dist = mag; target = v.Character.Head end
                    end
                end
            end
            if target then camera.CFrame = CFrame.new(camera.CFrame.Position, target.Position) end
        end
    end)

    -- TOUCH FLING (REACTIVE CONTACT)
    local flingActive = false
    local flingBtn = createModBtn("TOUCH FLING: OFF")
    flingBtn.MouseButton1Click:Connect(function()
        flingActive = not flingActive
        flingBtn.Text = flingActive and "TOUCH FLING: ON" or "TOUCH FLING: OFF"
        flingBtn.TextColor3 = flingActive and Color3.fromRGB(255, 50, 50) or Color3.new(1,1,1)
    end)

    RunService.Stepped:Connect(function()
        if flingActive and player.Character then
            local root = player.Character:FindFirstChild("HumanoidRootPart")
            if root then
                root.Touched:Connect(function(hit)
                    if flingActive and hit.Parent:FindFirstChild("Humanoid") and hit.Parent ~= player.Character then
                        local targetRoot = hit.Parent:FindFirstChild("HumanoidRootPart")
                        if targetRoot then
                            targetRoot.Velocity = Vector3.new(999999, 999999, 999999)
                        end
                    end
                end)
            end
        end
    end)

    -- TOGGLE HUD
    local openBtn = Instance.new("TextButton", screenGui)
    openBtn.Size = UDim2.new(0, 80, 0, 35); openBtn.Position = UDim2.new(0, 10, 0.5, -17)
    openBtn.Text = "OPEN"; openBtn.BackgroundColor3 = MainColor; openBtn.TextColor3 = AccentColor; openBtn.Visible = false
    Instance.new("UICorner", openBtn); Instance.new("UIStroke", openBtn).Color = GlowColor

    local function toggle()
        mainFrame.Visible = not mainFrame.Visible
        openBtn.Visible = not mainFrame.Visible
    end

    local closeBtn = Instance.new("TextButton", titleBar)
    closeBtn.Size = UDim2.new(0, 25, 0, 25); closeBtn.Position = UDim2.new(1, -35, 0.5, -12); closeBtn.Text = "X"
    closeBtn.BackgroundColor3 = Color3.fromRGB(180, 0, 0); Instance.new("UICorner", closeBtn)

    closeBtn.MouseButton1Click:Connect(toggle)
    openBtn.MouseButton1Click:Connect(toggle)
end

-- KEY CHECK
submitBtn.MouseButton1Click:Connect(function()
    if keyInput.Text == "bigboy2026" then
        keyFrame:Destroy()
        LoadHub()
    else
        submitBtn.Text = "WRONG KEY"
        task.wait(1)
        submitBtn.Text = "ACTIVATE"
    end
end)
